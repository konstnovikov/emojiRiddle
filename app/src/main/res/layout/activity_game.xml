<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/emojiSequenceView"
                app:flexDirection="row"
                app:flexWrap="wrap"
                app:justifyContent="center"
                app:alignItems="center"
                app:alignContent="center"
                android:layout_margin="8dp">
        </com.google.android.flexbox.FlexboxLayout>


        <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText"
                tools:text="Введите ответ"
                android:fadingEdge="none|horizontal|vertical" tools:background="@color/colorAccent"
                android:layout_margin="8dp"/>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp" android:gravity="bottom">

            <Button
                    android:text="Пропустить"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/skipButton"
                    android:onClick="skipRiddleButtonReaction"

            />
            <Button
                    android:text="Стереть все"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/eraseButton"
                    android:onClick="eraseText"
            />
            <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Ответить"
                    android:id="@+id/ansButton"
                    android:onClick="giveAnswerButtonReaction"
            />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>