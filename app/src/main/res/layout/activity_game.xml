<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/emojiSequenceView"
                app:flexDirection="row"
                app:flexWrap="wrap"
                app:justifyContent="center"
                app:alignItems="center"
                app:alignContent="center"
                android:layout_margin="8dp">
        </com.google.android.flexbox.FlexboxLayout>


        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="8dp">

            <AutoCompleteTextView
                    android:id="@+id/editText"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:hint="Введите ответ"
                    />

            <Button
                    android:id="@+id/eraseButton"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:layout_gravity="end|top"
                    android:background="@drawable/ic_cancel_black_24dp"
                    android:onClick="eraseText"/>

        </FrameLayout>



        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp" android:gravity="bottom">

            <Button
                    android:text="Пропустить"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/skipButton"
                    android:onClick="skipRiddleButtonReaction"

            />
            <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Ответить"
                    android:id="@+id/ansButton"
                    android:onClick="giveAnswerButtonReaction"
            />
        </LinearLayout>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="SMART_BANNER"
            tools:layout_height="50dp"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>